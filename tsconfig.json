{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["functions/**/*", "tests/**/*.spec.ts", "tests/mocha.env.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
